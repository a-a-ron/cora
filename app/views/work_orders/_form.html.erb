<%= form_for [@company, @work_order] do |f| %>
  <%= f.text_field :user_id %></br>
  <%= f.text_area :notes, placeholder: "Notes" %></br>
  
  <%= f.datetime_select(:expected_completion_date) %>
  <%= f.text_field :status, placeholder: "Status" %></br>
  <%= check_box_tag(:is_rush) %></br>
  <%= f.text_field :serviced_item_id %></br>
  <%= f.text_field :description, placeholder: "Description" %></br>
  <%= check_box_tag(:send_text_notification)%></br>
  <%= check_box_tag(:send_email_notification) %></br>
  <%= check_box_tag(:send_call_notification)%></br>
  <%= f.submit %>
<% end %>
